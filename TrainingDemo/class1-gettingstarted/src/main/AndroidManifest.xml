<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flyeek.gettingstarted" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.flyeek.gettingstarted.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/CustomActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flyeek.gettingstarted.FullScreenActivity"
            android:label="@string/title_activity_fullscreen"
            android:parentActivityName="com.flyeek.gettingstarted.MainActivity"
            android:theme="@style/CustomActionBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flyeek.gettingstarted.MainActivity" />
        </activity>
        <activity
            android:name="com.flyeek.gettingstarted.DialogActivity"
            android:label="@string/title_activity_dialog"
            android:theme="@style/CustomDialogTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flyeek.gettingstarted.MainActivity" />
        </activity>
    </application>

</manifest>
